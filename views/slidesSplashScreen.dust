<!DOCTYPE html>
<html lang="en">
  <head>
    {>htmlHead/}
    <title>ASQ - {title}</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/bootstrap.js"></script>

  </head>

  <body>

    <!---   Top menu -->
    {>menu/}

    <!---   Content of start screen   -->
    <div class="container-fluid" id="mainContainer">
      <div class="row-fluid" id="waitingScreen">
        <div class="span12 headline">
          <h1 style="text-align: center;">{title}</h1>
          <h5 style="text-align: center;" >Please open this link to follow the presentation</h5>

          <a href="http://{host}:{port}/live/{user}/"><h4 style="text-align: center;">http://{host}:{port}/live/{user}/</h4></a>
        </div>
        <div class="span12">
          <p id="viewers" style="text-align: left; width: 185px; margin: 0 auto 0 auto;"></p>
          <p id="numViewers" style="text-align: center;" class="muted">
            Waiting for viewers
          </p>
          <br />
          <br />
          <p style="text-align: center">
            <a href="/admincontroll" class="btn btn-large btn-primary" style="margin: 30px auto; display: inline; text-align: center;">Start presentation</a>
          </p>

          <br />
          <p style="text-align: center">
            <a href="/admin/" class="btn" style="margin: 0 auto; display: inline; text-align: center;">Go to presentation view</a>
          </p>

        </div>
      </div>
    </div>
    <!-- /Content of start screen -->

  </body>
</html>
