<!DOCTYPE html>
<html>
	<head>
		<title>ASQ - My Presentations</title>
		<!-- Bootstrap -->
		<link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">

		<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
		<link rel="stylesheet/less" type="text/css" href="/css/backend.less">
		<script src="/js/less-1.3.1.min.js" type="text/javascript"></script>
		<script src="/js/ajax.js"></script>

	</head>
	<body>

		<!---   top menu --->
		<% include menu %>

		<!---   Content area   --->
		<div class="container" id="content">

          <div class="row">
          	<!---   Seperating Headline   --->
			<div class="span12  headline">
				<h2 class="pull-left">Upload new presentation</h2>
			</div>

 			<div class="span12">
		    	<form method="POST" action=<%= "/user/" + username  + "/upload/" %> enctype="multipart/form-data" class="form-inline">
			    	<input id="lefile" type="file" name="upload" size="40" maxlength="100000" style="display:none">
					<div class="input-append">
						<input id="photoCover" class="input-large" type="text">
						<a class="btn" onclick="$('input[id=lefile]').click();">Browse</a>
					</div>
					<button type="submit" class="btn btn-primary">Upload</button>
		    	</form>
	    	</div>
	    </div>

	</div>

	<script src="http://code.jquery.com/jquery-latest.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script>
	$('input[id=lefile]').change(function() {
		   $('#photoCover').val($(this).val());
		});
	</script>
	</body>
</html>
