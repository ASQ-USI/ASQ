<!DOCTYPE html>
<html lang="en">
  <head>
		<% include htmlHead %>
		<title>ASQ - Statistics of <%=title%></title>
		
		 <!--Load the AJAX API-->
	    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
	    <script type="text/javascript">
	
	      // Load the Visualization API and the piechart package.
	      google.load('visualization', '1.0', {'packages':['corechart']});
	
	      // Set a callback to run when the Google Visualization API is loaded.
	      google.setOnLoadCallback(drawChart);
	
	      // Callback that creates and populates a data table,
	      // instantiates the pie chart, passes in the data and
	      // draws it.
	      function drawChart() {
	
	        // Create the data table.
	        var data = new google.visualization.DataTable();
	        data.addColumn('string', 'Solution');
	        data.addColumn('number', 'Number Answers');
	        data.addRows([
	          ['Wrong', 3],
	          ['Right', 1],
	        ]);
	        
	        var mc = new google.visualization.DataTable();
	        mc.addColumn('string', 'Solution');
	        mc.addColumn('number', 'Number Answers');
	        mc.addRows([
	          ['Very Good', 39],
	          ['Good', 15],
	          ['OK', 5],
	          ['Bad', 1],
	          ['Very Bad', 1],
	        ]);
	
	        // Set chart options
	        var options = {'title':'Right vs. Wrong Answers',
	                       'width':'100%',
	                       'height':300,
	                       'backgroundColor': 'none',
	                       'titleTextStyle': {
	                       		color: 'white',
	                       		fontSize: 16,
	                       		textAlign: 'left'
	                       	},
	                       'legend' : {
	                       		textStyle: {color: 'white'}
	                       		}
	                       };
	
	        // Instantiate and draw our chart, passing in some options.
	         <% for (var i = 0; i < questions.length; i++) { %> 
	         	
	        var chart<%=i%> = new google.visualization.PieChart(document.getElementById('chart_div<%=i%>'));
	        chart<%=i%>.draw(data, options);
	        
	        var chart<%=i%> = new google.visualization.ColumnChart(document.getElementById('mc_div<%=i%>'));
	        chart<%=i%>.draw(mc, options);
	        
	        <% }%>
	      }
		</script>
		
  </head>

  <body>

		<!---   top menu --->
		<% include menu %>
		
		
		<!---   Content area   --->  
    	<div class="container" id="mainContainer">
	        
	        <!--- Edit menu --->
	        <div class="row" >
				<div class="span12 headline">
					<h3 class="pull-left">Statistics presentation</h3>
					<form class="pull-right controls edit">
			  			<select>
			  				<option>Choose session</option>
						  <% for (var i = 0; i < session.length; i++) { %> <option><%= session[i] %></option><% }%>
						</select>
					</form>	
				</div>
	  		</div>
			
			<div class="row">
				<div class="span3">
					<ul class="nav nav-tabs nav-stacked">
					   <% for (var i = 0; i < questions.length; i++) { %> <li><a href="#"><%=i+1%> - <%= questions[i] %></a></li><% }%>
					</ul>
				</div>
				<div class="span9">
					 <% for (var i = 0; i < questions.length; i++) { %> 
					 	<div class="row">
					 		<div class="span9 headline"><h2> <%=i+1%> - <%= questions[i] %> </h2></div>
						 	<div class="span9"> 
						 		<div id="chart_div<%= i %>"></div>
						 		<div id="mc_div<%= i %>"></div>
						 	</div>
					 	</div>
					 <% }%>
					
				</div>
			</div>
		
	     </div> <!-- /container -->

		 <!-- Le javascript --->

		 <script src="/js/jquery.js"></script>
		 <script src="/js/bootstrap.js"></script>
		 <script>
		 $('.edit').each(function() {
			$(this).attr('href', $(this).attr('href')+window.location.search);	
		 });
		 </script>
  </body>
</html>
