<!DOCTYPE html>
<html lang="en">
  <head>
		<% include htmlHead %>
		<title>ASQ - My Presentations</title>
  </head>

  <body>

		<!---   top menu --->
		<% include menu %>
		
		
		<!---   Content area   --->  
    	<div class="container" id="mainContainer">
    		
    		
    		<!--- Alert --->
    		<!-- Show notification fo user feedback based on query alert and type-->
    		<% if (alert) { %>
					<div class="alert <%= type %>">
						<%= alert %>
					</div>
    		<% } %>
    		
    		
    		
    		<!---   Seperating Headline   --->
    		<% if (session) { %>
	        <div class="alert"> 
	        	<button type="button" class="close" data-dismiss="alert">&times;</button>
	            <h4>Presentation running</h4>
	            <p>You have a live session running. Do you want to see it? </p>
	            <p>
	                <a class="btn btn-primary"  href="/admin">Go to presentation</a>
	                <a class="btn btn-danger" href="stop/">  Stop presentation  </a>
	            </p>
	        </div>
	        <% } %>
	        
	        <!---   Seperating Headline   --->
	        <div class="row">
	            <div class="span12  headline">
	                <h2 class="pull-left">General course</h2>
	            </div>
	        </div>
	
	        <div class="row">
	        	<% for (var i=0;i<arrayslides.length;i++) { %>
	            <div class="span3">
	                <div class="thumb">
	                    <div class="info">
	                        <h4><%=arrayslides[i].title%></h4>		
	                    </div>
	        
	                    <div class="buttons">
	                        <a href="start/<%=arrayslides[i]._id%>" class="btn btn-primary hidden-phone"><i class="icon-play icon-white"> </i> Start Presentation</a>
	                        <a href="statistics?id=<%=arrayslides[i]._id%>" class="btn btn-info"><i class="icon-signal icon-white"> </i> Show Statistics</a>
	                        <a href="edit?id=<%=arrayslides[i]._id%>" class="btn btn-success"><i class="icon-pencil icon-white"> </i> Edit Presentation</a>
	                       	<div class="dates">
	                       		
	                       		<p><i class="icon-play"></i> <%=: arrayslides[i].lastSession | fromNow %></p>
	                       		<p><i class="icon-pencil" ></i> <%=: arrayslides[i].lastEdit | fromNow %></p>
	                       	</div>
	                    </div>
	                </div>
	            </div>
	           <% } %>
	      </div> 

	
	    </div> <!-- /container -->

		 <!-- Le javascript --->
		    <script src="/js/jquery.js"></script>
		    <script src="/js/bootstrap.js"></script>
		    <script>
		
			
			$(function () {
		    $('.thumb').click(function(evt) {
		        evt.stopPropagation(); //stops the document click action
		        $(this).parent().siblings().find(".thumb").removeClass("flipped");
		        $(this).parent().siblings().css("z-index", "1"); 
		        //$(this).siblings().removeClass('active');
		        $(this).addClass("flipped"); 
		        $(this).parent().css("z-index", "100"); 
		    });
		
		
		    $(document).click(function() {
		        //$('#map .item').removeClass('active'); //make all inactive
		        $(".thumb").removeClass("flipped");
		         $(".thumb").partent().css("z-index", "100"); ;
		    });
		});
			
    
    </script>  
  </body>
</html>
