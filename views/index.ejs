<!DOCTYPE html>
<html>
	<head>
		<!--<base href="http://localhost:3000/">-->
		<title>ASQ - Home</title>
		<!-- Bootstrap -->

		<link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">

		<link rel="stylesheet/less" type="text/css" href="/css/backend.less">
		<script src="/js/less-1.3.1.min.js" type="text/javascript"></script>
		<script src="http://code.jquery.com/jquery-latest.js"></script>
		<script src="/js/ajax.js"></script>
		<script src="/js/bootstrap.min.js"></script> 


		<script>
			$(document).ready(function() {
				<% if (fromsignup !== undefined && fromsignup != "false"){ %>
				$('#myModal').modal('show');
				<% } %>
				$('#createAccount').click(function() {
					$('#signup').submit();
				})
			});
		</script>

	</head>

	<body>

		<div id="wrapper">

			<div id="loginBox">
				<img src="/img/logo-big.png" />
				<% if (message !== undefined && message != ""){ %>
				<% if (fromsignup !== undefined && fromsignup != "true"){ %>
				<p></p>	
				<div class="alert alert-block">
					<h4><%= message %></h4>
				</div>	
				<% } %>

				<% } %>

				<div class="slidinglogin">
					<form name="login" class="form-horizontal" action="/user" method="post">
						<div class="control-group">
							<div class="input-prepend">
								<span class="add-on">Username</span>
								<input class="span2" id="prependedInput" type="text" name="username" placeholder="" autofocus="autofocus"/>
								<br/>
							</div>
						</div>
						<div class="control-group">
							<div class="input-prepend">
								<span class="add-on"> Password </span>
								<input type="password" name="password" class="span2" id="prependedInput" type="password" placeholder=""/>

							</div>
						</div>

						<button type="submit" class="btn btn-primary">Log in</button>
						<button type="button" class="btn" data-toggle="modal" data-target="#myModal">Register</button>
					</form>
				</div>

				<div class="signup">

				</div>

			</div>

			<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
						Ã—
					</button>
					<h3 id="myModalLabel">Sign up</h3>
				</div>
				<div class="modal-body">
					<% if (message !== undefined && message != ""){ %>
					<div class="alert alert-block">
						<h4><%= message %></h4>
					</div>	
					
					<br/>

					<% } %>
					
					
					
					
					
					<form id="signup" class="form-horizontal" action="/signup" method="post">
						<div class="control-group" id="groupUsername">
							<label class="control-label" for="inputUsername" >Username</label>
					    	<div class="controls">
					     		<input type="text" id="inputUsername" placeholder="MyUsername" name="signupusername" onkeyup="checkUsername(this)">
					     		<span class="help-inline" id="checkuser"> </span>
					    	</div>
					  	</div>
					  	
						<div class="control-group" id="groupEmail">
							<label class="control-label" for="inputEmail">Email</label>
							<div class="controls">
								<input type="email" id="inputEmail" placeholder="my.name@usi.ch" name="signupemail" onkeyup="validateMail()">
								<span class="help-inline" id="checkmail"> </span>
					  		</div>
						</div>
						
						<div class="control-group" id="groupPassword1">
							<label class="control-label" for="inputPassword">Password</label>
							<div class="controls">
								<input type="password" id="inputPassword" placeholder="Password" name="signuppassword">
								<span id ="checkpwd" class="help-inline"></span>
							</div>
						</div>
						
						<div class="control-group" id="groupPassword2">
							<label class="control-label" for="inputRepeatPassword">Repeat password</label>
							<div class="controls">
								<input type="password" id="inputRepeatPassword" placeholder="Password" name="signuppasswordconfirm" onkeyup="vaildatePassword()">
								<span id ="checkpwd2" class="help-inline"></span>
							</div>
							
						</div>
					  
					  
					  
					</form>
					

				</div>
				<div class="modal-footer">
					<button class="btn" data-dismiss="modal" aria-hidden="true">
						Close
					</button>
					<button class="btn btn-primary" id="createAccount" >
						Create Account
					</button>
				</div>
			</div>

	</body>

</html>