<!DOCTYPE html>
<html lang="en">
  <head>
  	{>htmlHead/}
    <title>ASQ - Sign up for ASQ</title>

  </head>
  
  <body>
  <!-- Tips and error for forms based on Twitter https://twitter.com/signup -->
  {>signupMenu/}

  <div class="container" id="mainContainer">

	  <div class="page-canvas">
	  	<div class="signup-wrapper">
	  		
				<h1>Sign up for ASQ with your campus account</h1>

				{?alert}
			      <div class="alert alert-{type}">
			        {alert}
			      </div>
		      {/alert}

		      {?error}
			      <div class="alert alert-danger">
			        {error}
			      </div>
		      {/error}

		      {?info}
			      <div class="alert alert-info">
			        {info}
			      </div>
		      {/info}

					<form id="signup-form" action="/signup-campus" method="post">

						<fieldset>

							<div class="form-group" id="groupUsername">
								<label class="control-label" for="inputUsername"> Select your ASQ username</label>
					    	<div class="controls">
					    		{?tipMessages.username}
									{>sidetip:tipMessages.username field="username" activate=activate.username/}
								{/tipMessages.username}
					     		<input type="text" class="form-control" id="inputUsername" placeholder="rodney" name="signupusername">
					    	</div>
					  	</div>
							
							<div class="form-group" id="groupCampusUsername">
								<label class="control-label" for="inputCampusUsername">Campus username</label>
								<div class="controls">
									<input type="text" class="form-control"  autocomplete="off" id="inputCampusUsername" placeholder="rodney" name="username"{?username} value="{username}"{/username}>
								</div>
							</div>
							
							<div class="form-group" id="groupCampusPassword">
								<label class="control-label" for="inputCampusPassword">NetId Password</label>
								<div class="controls">
									<input type="password" class="form-control" id="inputCampusPassword" placeholder="supersecret" name="password">
								</div>
								
							</div>
							<input class="btn btn-primary" id="createAccount" type="submit" value="Create Account"/>
						</fieldset>
					</form>

	  	</div> <!-- end div#row -->
	  </div> <!-- end div#signup-wrapper -->

 </div> <!-- end div#page-canvas -->



		<script>
			/* dom bindings for the page */
			require('dom').bindingsFor('signupCampus');
		</script>
	</body>
</html>
