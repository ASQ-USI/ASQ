<!DOCTYPE html>
<html lang="en">
  <head>
  	{>htmlHead/}
    <title>ASQ - Sign in</title>
    <link href='/css/login.css' rel='stylesheet'/>

  </head>
  
  <body data-from-register="{fromRegister}">

		<div id="wrapper">

			<div id="loginBox">
				<img src="/img/logo-big.png" />
				{?message}
					{^fromRegister}
					<p>&nbsp;</p>	
						<div class="alert alert-block">
							<h4>{message}</h4>
						</div>	
					{/fromRegister}
				{/message}		

				<div class="slidinglogin">
					<form name="login" class="form-horizontal" action="/sign_in" method="post">
						<div class="control-group">
							<div class="input-prepend">
								<span class="add-on">Username</span>
								<input class="span2" id="prependedInput" type="text" name="username" placeholder="" autofocus="autofocus"/>
								<br/>
							</div>
						</div>
						<div class="control-group">
							<div class="input-prepend">
								<span class="add-on"> Password </span>
								<input type="password" name="password" class="span2" id="prependedInput" type="password" placeholder=""/>

							</div>
						</div>

						<button type="submit" class="btn btn-primary">Log in</button>
						<button type="button" class="btn" data-toggle="modal" data-target="#registerModal">Register</button>
					</form>
				</div>

				<div class="signup">

				</div>

			</div>

			<div id="registerModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
						Ã—
					</button>
					<h3 id="registerModalLabel">Register on ASQ</h3>
				</div>
				<div class="modal-body">
					{?message}
						<div class="alert alert-block">
							<h4>{message}</h4>
						</div>	
						
						<br/>
					{/message}					
					
					<form id="signup" class="form-horizontal" action="/register" method="post">
						<div class="control-group" id="groupUsername">
							<label class="control-label" for="inputUsername" >Username</label>
					    	<div class="controls">
					     		<input type="text" id="inputUsername" placeholder="MyUsername" name="signupusername" >
					     		<span class="help-inline" id="checkuser"> </span>
					    	</div>
					  	</div>
					  	
						<div class="control-group" id="groupEmail">
							<label class="control-label" for="inputEmail">Email</label>
							<div class="controls">
								<input type="email" id="inputEmail" placeholder="my.name@usi.ch" name="signupemail">
								<span class="help-inline" id="checkmail"> </span>
					  		</div>
						</div>
						
						<div class="control-group" id="groupPassword1">
							<label class="control-label" for="inputPassword">Password</label>
							<div class="controls">
								<input type="password" id="inputPassword" placeholder="Password" name="signuppassword">
								<span id ="checkpwd" class="help-inline"></span>
							</div>
						</div>
						
						<div class="control-group" id="groupPassword2">
							<label class="control-label" for="inputRepeatPassword">Repeat password</label>
							<div class="controls">
								<input type="password" id="inputRepeatPassword" placeholder="Password" name="signuppasswordconfirm">
								<span id ="checkpwd2" class="help-inline"></span>
							</div>
							
						</div>
					</form>

				</div>
				<div class="modal-footer">
					<button class="btn" data-dismiss="modal" aria-hidden="true">
						Close
					</button>
					<button class="btn btn-primary disabled" id="createAccount" >
						Create Account
					</button>
				</div>
			</div>
		<!-- </div> -->
		<script>
			/* dom bindings for the page */
			require('dom').bindingsFor('signIn');
		</script>
	</body>
</html>