<!DOCTYPE html>
<html lang="en">
	<head>
		{>htmlHead/}
		<title>ASQ - My Presentations</title>
	</head>

	<body>

		<!---   top menu -->
		{>menu/}

		<!---   Content area   -->
		<div class="container" id="mainContainer">

			<!--- Alert -->
			<!-- Show notification fo user feedback based on query alert and type-->

			{?alert}
			<div class="alert {type}">
				{alert}
			</div>
			{/alert}

			<!---   Seperating Headline   -->
			{?session}
			<div class="alert alert-block">
				<button type="button" class="close" data-dismiss="alert">
					&times;
				</button>
				<h4>Presentation running</h4>
				<p>
					You have a live session running. Do you want to see it?
				</p>
				<p>
					<a class="btn btn-primary"  href="/admincontroll">Go to presentation</a>
					<a class="btn btn-danger" href="stop/"> Stop presentation </a>
				</p>
			</div>
			{/session}

			<!---   Seperating Headline   -->
			
				{^slidesByCourses}
					<div class="row">
						<div class="span12  headline">
							<h2 class="pull-left">No courses available</h2>
                        </div>
						<div class="span12">
							<p>Please upload a new presentation.</p>
						</div>
                    </div>
				{/slidesByCourses}

				{#slidesByCourses}
				<div class="row">
				<div class="span12  headline">
					<h2 class="pull-left">{course}</h2>
				</div>
				</div>
				<div class="row">
					<div class="span12">
						{#slides}
						<div class="thumbContainer">
							<div class="thumb" >
								<div class="info" >
									<div class="bg" style="background-image: url('/slides/thumbs/{_id}/0-thumb.png')"> </div>
									<h4>{title}</h4>
								</div>
		
								<div class="buttons">
									<a href="start/{_id}" class="btn btn-primary start"><i class="icon-play icon-white"> </i> Start Presentation</a>
									<a href="statistics?id={_id}" class="btn btn-info"><i class="icon-signal icon-white"> </i> Show Statistics</a>
									<a href="edit?id={_id}" class="btn btn-success"><i class="icon-pencil icon-white"> </i> Edit Presentation</a>
									<div class="dates">
										<p><i class="icon-play"></i> {lastSession}</p>
										<p><i class="icon-pencil" ></i> {lastEdit}</p>
									</div>
								</div>
							</div>
						</div>
						{/slides}
					</div>
				</div>
			{/slidesByCourses}


		</div>
		<!-- /container -->

		<!-- Le javascript -->
		<script src="/js/bootstrap.js"></script>
		<script>
		
	  $('.thumb').click(function (evt) {
				
		    evt.stopPropagation(); 
		    console.log("here");
		    $(this).parent().parent().parent().siblings().siblings().siblings().find(".thumb").removeClass("flipped");
		    $(this).parent().parent().parent().siblings().siblings().siblings().css("z-index", "1");
		    $(this).addClass("flipped");
		    $(this).parent().css("z-index", "10");
		});
		
		$(".buttons a").click(function (event) {
		    event.preventDefault();
		    window.location = $(this).attr("href");
		    console.log(window.navigator.standalone);
		    if($(this).hasClass("start") && !(window.navigator.standalone == true)){
		    	window.open("/admin", '');
		    	slideshow.blur();
					window.focus();
		    }
		});
		
		
		$(document).click(function () {
		    
		    $(".thumb").removeClass("flipped");
		    $(".thumb").partent().css("z-index", "100");
		});
		</script>
	</body>
</html>

