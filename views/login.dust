<!DOCTYPE html>
<html lang="en">
<head>
	{>htmlHead/}
	<title>ASQ - Log In</title>
	<link href='/css/login.css' rel='stylesheet'/>
</head>
<body data-from-signup="{formSignup}">
	<div id="login-wrapper" class="container">
		<div class="login-box">
			<img src="/img/logo-big.png" alt="ASQ logo"/>
			{?message}
				{^formSignup}
					<p>&nbsp;</p>
					<div class="alert alert-block">
						<h4>{message}</h4>
					</div>
				{/formSignup}
			{/message}

			{?alert}
				{?alert.success}
					<div class="alert alert-success">{alert.success}</div>
				{/alert.success}
				{?alert.info}
					<div class="alert alert-info">{alert.info}</div>
				{/alert.info}
				{?alert.warning}
					<div class="alert alert-warning">{alert.warning}</div>
				{/alert.warning}
				{?alert.error}
					<div class="alert alert-danger">{alert.error}</div>
				{/alert.error}
			{/alert}

			<form class="form-signin" action="/login" method="post">
				<input type="text" name="username" class="form-control" placeholder="Username" autofocus>
				<input type="password" name="password" class="form-control" placeholder="Password">
				<label class="checkbox">
					<input type="checkbox" value="remember-me"> Remember me
				</label>
				<button type="submit" class="btn btn-lg btn-primary btn-block">Log In</button>
			</form>
			<div class="signup-field">
				<a href="/signup">signup</a>
			</div>
		</div>
	</div>
	<script>
		/* dom bindings for the page */
		require('dom').bindingsFor('signIn');
	</script>
</body>
</html>