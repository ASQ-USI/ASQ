	<div class="sidetip">
    <p class="tip">{tip}</p>
    {@JSONIter:isaok}
    <p class="{key} isaok"><span class="glyphicon glyphicon-ok"></span> {value}</p>
    {/JSONIter}
    {?checking}
    <p class="checking">{checking}</p>
    {/checking}
    {@JSONIter:error}
    <p class="{key} error"><span class="glyphicon glyphicon-remove"></span> {value}</p>
    {/JSONIter}
</div>