<div class="sidetip">
    <p class="tip">{tip}</p>
    {@JSONIter:isaok}
    <p class="{key} isaok "><span class="glyphicon glyphicon-ok"></span> {value}</p>
    {/JSONIter}
    {?checking}
    <p class="checking">{checking}</p>
    {/checking}
    {@JSONIter:error activate=activate.field}
    <p class="{key} error {?activate}activate{/activate}"><span class="glyphicon glyphicon-remove"></span>{activate}{value}</p>
    {/JSONIter}
</div>