<!DOCTYPE html>
<html lang="en">
  <head>
    {>htmlHead/}
    <title>ASQ - Presentation Settings</title>
  </head>
  
  <body data-view-name = "presentationSettings">

    <!--   top menu -->
    {>menu/}

    <!--   Content area   -->
    <div class="container" id="main-container">

      <!-- Show notification fo user feedback based on query alert and type-->
      {?alert}
      <div class="alert alert-{type}">
          {message}
      </div>
      {/alert}

      <h1>{title}</h1>
      {?livelink}<div><h3><i>This slideshow is currently active. Click <a href={livelink}>here</a> to live.</i></h3></div>{/livelink}
      <section id="slideshowsettings">
        <h3 >Slideshow settings</h3>
          <form method="POST" action="settings?_method=PUT" >
            <div class="table">
              {#presentationSettings}
              <div class="row">
                <div class="col-md-3">{key}</div>
                <div class="col-md-3">
                  <div class="form-group">
                    {> "inputs/{kind}Input" class="slideshow-setting"/}
                  </div>
                </div>
              </div>
              {/presentationSettings}
            </div> 
            <button id="slideshowSettingsSave" type="submit" class="btn btn-primary">Save</button>
          </form> 
      <section>         

      <section id="exercisesettings">
        <h3>Exercise settings</h3>
        {#exerciseSettings}
          <div>
            <p>Slide {index}</p>
            {#exercises}
              <div>
                <form method="POST" action="settings?_method=PUT" >
                  <p>Exercise {id}</p>
                  {#settings}
                  {> "inputs/{kind}Input" class="exercise-setting"/}
<!--                     <label for={id}>{key}</label>
                    {^select}
                      {> "inputs/standardInput" /}
                    {/select}
                    {?select}
                      {> "inputs/selectInput" /}
                    {/select} -->
                  {/settings}
                  <button id={key} type="submit" class="btn btn-primary">Save</button>
                </form>
              </div>
            {/exercises}
          </div>
        {/exerciseSettings}
      </section>

    </div>
  </body>
</html>
